@page "/counter"
@inject HttpClient Http
@using ContactMenager.Client.ViewModels


<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="getContacts">Click me</button>

@code {
    private int currentCount = 10;
    private ContactViewModel[]? contacts;

    private void IncrementCount()
    {
        currentCount++;
    }

    private async void getContacts()
    {
        contacts = await Http.GetFromJsonAsync<ContactViewModel[]>("api/contacts") ?? [];
    }

}
